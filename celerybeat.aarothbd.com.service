[Unit]
Description=Aaroth BD Celery Beat Scheduler
After=network.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/var/www/backend.aarothbd.com
Environment="PATH=/var/www/backend.aarothbd.com/.venv/bin"
EnvironmentFile=/var/www/backend.aarothbd.com/.env
ExecStart=/var/www/backend.aarothbd.com/.venv/bin/celery -A core beat --loglevel=INFO --scheduler django_celery_beat.schedulers:DatabaseScheduler

[Install]
WantedBy=multi-user.target
