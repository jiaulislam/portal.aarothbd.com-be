[Unit]
Description=Aaroth BD Celery Flower Monitor
After=network.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/var/www/backend.aarothbd.com
Environment="PATH=/var/www/backend.aarothbd.com/.venv/bin"
EnvironmentFile=/var/www/backend.aarothbd.com/.env
ExecStart=/var/www/backend.aarothbd.com/.venv/bin/celery -A core flower --port=5555

[Install]
WantedBy=multi-user.target
